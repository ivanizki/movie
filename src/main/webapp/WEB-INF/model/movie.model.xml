<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="movie">
		<annotations>
			<package-binding
				implementation-package="ivanizki.movie.model.impl"
				interface-package="ivanizki.movie.model"
			/>
		</annotations>
		<class name="Human">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<sort-columns order="name:ascending"/>
				<main-properties properties="name"/>
			</annotations>
			<attributes>
				<property name="name"
					type="tl.core:String"
				/>
			</attributes>
		</class>
		<class name="Movie">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<sort-columns order="year:descending,title:ascending"/>
				<main-properties properties="year,title,directors"/>
			</annotations>
			<attributes>
				<property name="year"
					type="tl.core:Integer"
				/>
				<property name="title"
					type="tl.core:String"
				>
					<annotations>
						<render-whole-line/>
					</annotations>
				</property>
				<reference name="directors"
					kind="forwards"
					multiple="true"
					navigate="true"
					ordered="true"
					type="Human"
				/>
				<property name="duration"
					type="tl.core:Integer"
				/>
				<reference name="actors"
					kind="forwards"
					multiple="true"
					navigate="true"
					ordered="true"
					type="Human"
				>
					<annotations>
						<reference-display value="table"/>
					</annotations>
				</reference>
			</attributes>
		</class>
	</module>
</model>